{
    email {$ADMIN_EMAIL}
}

# Multi-Domain Appliance Configuration
{$DOMAIN_NAME} {
    tls {
        issuer acme {
            ca {$PAKANA_ACME_CA}
        }
        issuer zerossl
    }

    handle_path /manual* {
        root * /data/docs
        file_server
    }

    reverse_proxy api-report:8080

    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
    }
}

# IP-based Access (Fallback)
:80 {
    reverse_proxy api-report:8080
}
